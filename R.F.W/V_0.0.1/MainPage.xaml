<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="V_0._0._1.MainPage">
    <Grid BackgroundColor="LightGrey">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label BackgroundColor="White" Margin="4, 4, 4, 2" Grid.Row="0" Text="팁" TextColor="Black"></Label>
        <Label x:Name="Note" BackgroundColor="White" Margin="4, 2, 4, 2" Grid.Row="1" Text="메모"></Label>
        <Button x:Name="btn_plus" Clicked="btn_plus_Clicked" Grid.Row="1" Text="+" HorizontalOptions="End" VerticalOptions="End" MinimumHeightRequest="75" MinimumWidthRequest="75" Margin="0,0,8,8"></Button>
    </Grid>
</ContentPage>
